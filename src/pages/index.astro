---
import Layout from '../layouts/Layout.astro';
import IntroHero from '../components/IntroHero';
import IntroBackground from '../components/IntroBackground';
import ProjectShowcase from '../components/ProjectShowcase';
import ExperienceTimeline from '../components/ExperienceTimeline';
import TechStackSection from '../components/TechStackSection';
import SocialLinks from '../components/SocialLinks';
import CreditsSection from '../components/CreditsSection';
import NavBar from '../components/NavBar';
---

<Layout title="Alan Tran | Software Engineer Portfolio">
  <NavBar client:load />
  <SocialLinks />
  <main>
    <section
      id="intro"
      class="relative flex min-h-[100svh] w-full items-center overflow-hidden
        px-0 py-0"
    >
      <div class="absolute inset-0">
        <IntroBackground client:load />
      </div>
      <div class="section-shell relative z-10 py-28 md:py-32">
        <IntroHero
          client:load
        />
      </div>
    </section>

    <section id="experience" class="section-shell">
      <ExperienceTimeline client:visible />
    </section>

    <section id="projects" class="section-shell">
      <ProjectShowcase client:visible />
    </section>

    <section id="tech-stack" class="section-shell">
      <TechStackSection client:visible />
    </section>

    <section id="credits" class="section-shell pt-8 pb-16">
      <CreditsSection />
    </section>
  </main>
</Layout>
